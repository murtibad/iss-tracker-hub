{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "indent": [
            "warn",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-trailing-spaces": "warn",
        "eol-last": [
            "warn",
            "always"
        ],
        "comma-dangle": [
            "warn",
            "only-multiline"
        ],
        "prefer-const": "warn",
        "no-var": "error",
        "arrow-spacing": [
            "warn",
            {
                "before": true,
                "after": true
            }
        ]
    },
    "globals": {
        "THREE": "readonly"
    }
}